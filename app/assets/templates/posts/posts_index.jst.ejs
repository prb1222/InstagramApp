<h1>Posts</h1>
<form class="post-form-fields" action="" method="post">

  <!-- <button class="close">&times;</button> -->
  <h4>Find Posts</h4>
  <ul class="errors"></ul>

  <div class="form-group">
    <label for="title-field">Tag</label><br>
    <input id="title-field" type="text" name="post[tag]">
  </div>

  <div class="form-group">
    <label for="start-date-field">Start Date</label><br>
    <input id="start-date-field" type="date" name="post[start_date]">
  </div>

  <div class="form-group">
    <label for="end-date-field">End Date</label><br>
    <input id="end-date-field" type="date" name="post[end_date]">
  </div>

  <input type="submit" class="btn btn-default" value="Submit">
</form>

<ul class="posts-index"></ul>
<% if(!posts.length) { %>
  <p class="no-events">No posts to show.</p>
<% } %>
