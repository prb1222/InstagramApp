<div class="main-content container">
  <div class="header col-md-12 col-xs-12">
    <h1>Instagram Posts</h1>
  </div>
  <form class="post-form-fields form-inline" action="" method="post">

    <!-- <button class="close">&times;</button> -->
    <ul class="errors col-md-12 col-xs-12"></ul>

    <div class="form-group">
      <label class="control-label" for="title-field">Tag</label><br>
      <input id="title-field" type="text" class="form-control" name="post[tag]">
    </div>

    <div class="form-group">
      <label class="control-label" for="start-date-field">Start Date</label><br>
      <input id="start-date-field" class="form-control" type="date" name="post[start_date]">
    </div>

    <div class="form-group">
      <label class="control-label" for="end-date-field">End Date</label><br>
      <input id="end-date-field" type="date" class="form-control" name="post[end_date]">
    </div>

    <div class="button-row container">
      <input type="submit" class="btn btn-default" value="Search">
      <input type="button" class="btn btn-warning load-more" value="Load More">
    </div>
  </form>

</div>
<div id="paginator"></div>
<div class="posts-index"></ul>
<% if(!posts.length) { %>
  <p class="no-posts">No posts to show.</p>
<% } %>
